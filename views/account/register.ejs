<!-- the content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%# messages() %> 

<!-- flash message-->
<%- messages() %>

<div class="registration">
<form id="register" action="/account/register" method="post">
    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" required>
    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" required>
    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" placeholder="Enter your email" required>
    <label for="psw">Password:</label>
    <input type="password" id="psw" name="account_password" title="the password must be:
    12 characters in length, minimum
    contain at least 1 capital letter
    contain at least 1 number
    contain at least 1 special character" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
    <button type="submit">Register</button>
</form>
</div>  

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
    