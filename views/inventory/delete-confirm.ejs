<!-- the content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
<!-- message--> 
<%- messages() %>

<div class="addinv">
    <form id="updateForm" action="/inv/delete" method="post">
        <p>Confirm Deletion - The delete is permanent.</p>
        <label for="inv_make">Make: </label>
        <input id="inv_make" name="inv_make" type="text" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.inv_make%>" readonly>
        <label for="inv_model">Model: </label>
        <input id="inv_model" name="inv_model" type="text" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.inv_model%>" readonly>
        <label for="inv_year">Year: </label>
        <input id="inv_year" name="inv_year" type="text" required pattern="^\d{4}$" value="<%= locals.inv_year%>" readonly>
        <label for="inv_price">Price: $ </label>
        <input id="inv_price" name="inv_price" type="number" required value="<%= locals.inv_price%>" readonly>
        <button type="submit" class="formButton">Delete Vehicle</button>    
        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
   <%  }) %>
   </ul>
<% } %>

