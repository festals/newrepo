<!-- the content heading -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
<!-- message--> 
<%- messages() %>

<!--add Classification Form-->
<div class="addclassif">
    <form id="classification" action="/inv/add-classification" method="post">
        <label for="classification_name">Class Name:</label>
        <input id="classification_name" type="text" name="classification_name" pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>" required>
        <button type="submit" class="formButton">Add Classification</button>
    </form> 
</div>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
   <%  }) %>
   </ul>
<% } %>